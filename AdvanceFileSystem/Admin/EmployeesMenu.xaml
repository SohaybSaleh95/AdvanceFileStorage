<UserControl x:Class="AdvanceFileSystem.Admin.EmployeesMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdvanceFileSystem.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="364" Height="291" Background="#FF2980B9">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="employees_list_Button" Content="Employees List" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="50" Background="#FF336699" Foreground="#FFECF0F1" Click="employees_list_Button_Click"/>
        <Button x:Name="add_employee_Button" Content="Add Employee" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="50" Background="#FF336699" Foreground="#FFECF0F1" Grid.Column="1" Click="add_employee_Button_Click"/>

    </Grid>
</UserControl>
